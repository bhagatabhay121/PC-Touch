[Unit]
Description=Laptop Remote Control Server
After=network.target

[Service]
Type=simple
User=%YOUR_USERNAME%
WorkingDirectory=/home/%YOUR_USERNAME%
ExecStart=/usr/bin/python3 /home/%YOUR_USERNAME%/laptop_server_autostart.py
Restart=always
RestartSec=10
StandardOutput=append:/home/%YOUR_USERNAME%/.laptop_remote/server.log
StandardError=append:/home/%YOUR_USERNAME%/.laptop_remote/error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target
